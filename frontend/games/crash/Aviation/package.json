{
  "name": "aviation",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rimraf dist .assetpack manifest public/assets",
    "start": "npm run dev",
    "build": "npm run clean && vite build",
    "build:watch": "vite build --watch",
    "release": "npm run lint && tsc && vite build",
    "preview": "vite preview --port 8080 --strictPort",
    "lint": "eslint .",
    "dev": "npm-run-all -p build:watch preview"
  },
  "dependencies": {
    "@esotericsoftware/spine-pixi-v8": "workspace:*",
    "howler": "workspace:*",
    "crash-game-engine": "workspace:*",
    "game-engine": "workspace:*",
    "pixi.js": "workspace:*"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/node": "^22.15.29",
    "eslint": "^9.28.0",
    "rimraf": "workspace:*",
    "typescript": "~5.7.3",
    "typescript-eslint": "^8.33.1",
    "vite": "workspace:*",
    "vite-plugin-dts": "^4.5.4",
    "npm-run-all": "^4.1.5"
  }
}
